<div id="header">
  
  <p id="greeting">Hi <%= name %>, what do you need?</p>
  
  <form id="search-form" method="get" action="/public/search">
    <input type="text" name="query" id="search-bar" placeholder="Search here" maxlength="500">
    
    <select name="option" id="search-option">
      <option value="bs">Books for sale</option>
      <option value="bb">Books wanted</option>
      <option value="is">Items for sale</option>
      <option value="ib">Items wanted</option>
    </select>

    <button id="search-button" type="submit">Search</button>
  </form>

  <button id="drop-down-button">==</button>
  
  <div id="drop-down-content"> <!-- Positioned wrt #header because #header is positioned -->
    <ul>
      <li><a href="http://localhost:3000/public/home">Home</a></li>
      <li><a href="http://localhost:3000/public/sell">Sell</a></li>
      <li><a href="http://localhost:3000/public/buy">Buy</a></li>
      <li><a href="http://localhost:3000/public/posts/sell">Edit sell posts</a></li>
      <li><a href="http://localhost:3000/public/posts/buy">Edit buy posts</a></li>
      <li><a href="http://localhost:3000/public/settings">Account Settings</a></li>
      <li><a href="http://localhost:3000/users/signout">Sign Out</a></li>
    </ul>
  </div>

</div>